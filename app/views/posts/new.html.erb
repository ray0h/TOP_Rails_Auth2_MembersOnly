<div class='col-container'>
  <div class='col-item'>
    <h2 class="marg-5">Create a New Post</h2>
    <%= form_with model: @post do |f| %>
      <%# f.label :new_post %><br/>
      <%= f.text_area :body, autofocus: true, rows: "10" %>
      <br/>
      <%= f.submit 'Post' %>
    <% end %>

    <%= link_to 'Back', root_path, class: "button" %>
  </div>
</div>