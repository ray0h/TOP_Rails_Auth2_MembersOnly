<%# edit post form %>

<div class='col-container'>
  <div class='col-item'>
    <h2 class="marg-5">Edit Post</h2>
    <%= form_for @post do |f| %>
      <br/>
      <%= f.text_area :body, autofocus: true, rows: "10" %>
      <br/>
      <%= f.submit 'Post' %>
    <% end %>

    <%= link_to 'Back', root_path, class: "button" %>
  </div>
</div>