<%# comment username %>
<% if user_signed_in? %>
  <p class='marg-5 lmarg-10'>
    <%= comment.user.username %>, <small><%= distance_of_time_in_words(Time.now, comment.created_at) %> ago</small>
    <% if current_user.id == comment.user.id %>
      <%= link_to edit_post_comment_path(comment.post, comment), class: 'blank-link white-color' do %>
        <i class="fa fa-pencil" aria-hidden="true"></i>
      <% end %>
      <%= link_to [ comment.post, comment ], class: 'blank-link white-color', method: :delete, data: { confirm: "are you sure you want to delete this comment?" } do %>
        <i class="fa fa-trash-o" aria-hidden="true"></i>
      <% end %>
    <% end %>
  </p>
<% else %>
  <p class='marg-5 lmarg-10'>
    <strong>Anon</strong>, <small><%= distance_of_time_in_words(Time.now, comment.created_at) %> ago</small>
  </p>  
<% end %>

<%# comment body %>
<p class='lmarg-10'>
  <em><%= comment.body %></em>
</p>
